mixin skills-item(items)
  each item in items
    - var { name, level, maxLevel=12 } = item;

    .skills-item
      h3.skills-item__name= name
      ul.skills-item__level
        - for (var i = 0; i < level; i += 1)
          li.skills-item__level-item
            span.skills-item__dot
        - for (var i = 0; i < (maxLevel - level); i += 1)
          li.skills-item__level-item
            span.skills-item__dot.skills-item__dot_disabled
